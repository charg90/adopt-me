<body class="bg-dark">
  <div class="container-fluid" style="height:100vh">
    <div class="row">
      {{#each organizacion}}
        <div class="col-6 d-flex justify-content-center">

          <div class="card-body">
            <h5
              class="card-title text-center"
              style="color:#C821E5 !important"
            >{{nombre}}</h5>
            <p
              class="card-text text-center"
              style="color:#C821E5 !important"
            >direccion:{{direccion}}</p>
            <p
              class="card-text text-center"
              style="color:#C821E5 !important"
            >telefono:{{telefono}}</p>
            <a
              href="/admin/organizacion/update/{{id}}"
              class="btn btn-primary d-flex justify-content-center"
            >editar<i class="fas fa-edit"></i></a>
            <a
              href="/admin/organizacion/delete/{{id}}"
              class="btn btn-danger d-flex justify-content-center mt-2"
            >eliminar<i class="fas fa-trash-alt"></i></a>
          </div>

        </div>
      {{/each}}
    </div>
  </div>
</body>