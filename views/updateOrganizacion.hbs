<body class="bg-dark">
<div class="container-fluid">
  <div
    class="row justify-content-center align-items-center"
    style="height : 100vh"
  >

    <form method="POST" action="/admin/organizacion/update/{{organizacion.id}}">
      <div class="form-group">
        <label for="nombre" style="color:#C821E5 !important">Nombre:</label>
        <input
          type="text"
          class="form-control"
          id="nombre"
          name="nombre"
          
          value="{{organizacion.nombre}}"
        />
      </div>
      <div class="form-group">
        <label for="edad" style="color:#C821E5 !important">Telefono:</label>
        <input
          type="text"
          class="form-control"
          id="telefono"
          name="telefono"
          
          value="{{organizacion.telefono}}"
        />
      </div>
      <div class="form-group">
        <label for="descripcion" style="color:#C821E5 !important" >Direccion:</label>
        <input
          type="text"
          class="form-control"
          id="direccion"
          name="direccion"
          value="{{organizacion.direccion}}"
        />
      </div>

        <div class="d-grid gap-2">
          <button
            type="submit"
            class="btn btn-block btn-primary mt-2"
          >editar</button>

        </div>
<p class="text-danger">{{message}}</p>
      </div>

    </form>

  </div>

</div>
</body>